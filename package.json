{
  "name": "headless-render-api",
  "version": "1.0.0",
  "description": "Headless browser content fetcher service using Playwright",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "start:dev": "NODE_ENV=development nodemon app.js",
    "docker:build": "docker build -t headless-render-api:latest .",
    "docker:run": "docker run -p 3000:3000 --rm headless-render-api:latest",
    "docker:run:dev": "docker run -p 3000:3000 -e NODE_ENV=development --rm headless-render-api:latest",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:push": "docker push headless-render-api:latest",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint .",
    "health": "curl http://localhost:3000/health"
  },
  "keywords": [
    "playwright",
    "headless-browser",
    "web-scraping",
    "content-fetcher",
    "chromium"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@valkey/valkey-glide": "^2.1.0",
    "compression": "^1.8.1",
    "express": "^5.1.0",
    "pino": "^9.11.0",
    "playwright": "1.55.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
